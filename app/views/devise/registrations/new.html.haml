.header2
  = link_to "MIURA KITCHEN", root_path,class: "up_name"
  .up_sab アカウント作成
.up_main
  = form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |form|
    - if @user.errors.any?
      .error-name エラーが発生しました
    .field
      = form.label "プロフィール画像"
      %br/
      = form.file_field :image
    .preview2
    .field
      = form.label "ニックネーム"
      %span.required 必須
      %br/
      = form.text_field :nickname, placeholder: "例) 山田太郎", autofocus: true, maxlength: "6"
      - if @user.errors.any?
        - @user.errors.full_messages_for(:nickname).each do |error|
          .error-name
            = error
    .field
      = form.label "メールアドレス"
      %span.required 必須
      %br/
      = form.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
      - if @user.errors.any?
        - @user.errors.full_messages_for(:email).each do |error|
          .error-name
            = error

    .field
      = form.label "パスワード"
      %span.required 必須
      %br/
      = form.password_field :password, autocomplete: "new-password", placeholder: "6文字以上"
      - if @user.errors.any?
        - @user.errors.full_messages_for(:password).each do |error|
          .error-name
            = error

    .field
      = form.label "確認用パスワード"
      %span.required 必須
      %br/
      = form.password_field :password_confirmation, autocomplete: "new-password", placeholder: "6文字以上"
      - if @user.errors.any?
        - @user.errors.full_messages_for(:password_confirmation).each do |error|
          .error-name
            = error

    .field
      = form.label "ひとこと"
      %br/
      = form.text_area :text, class:"new-text", placeholder: "例) 料理を作るのも食べるのも大好き人間です"


    .actions
      = form.submit "登録完了" ,class:"btn"
