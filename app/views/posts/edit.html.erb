<div class="contents row">
  <div class= box>
    <%= form_with(model: @post, local: true) do |form| %>
      <div class="container">
        <div class= name-list>
          <%= form.text_field :name, class: "name-list1", placeholder: "例: ホクホク肉じゃが" %>
        </div>
        <div class= image-list>
          <%= form.text_field :image, class: "name-list1", placeholder: "写真" %>
        </div>
        <div class= text-list>
          <%= form.text_area :text, placeholder: "材料" , rows: "10" %>
        </div>
        <div class= text2-list>
          <%= form.text_area :text2, placeholder: "作り方" , rows: "10" %>
        </div>
        <%= form.submit "SEND", class: "name-list2"%>
      </div>
    <% end %>
  </div>
</div>