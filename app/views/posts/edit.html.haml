.contents.row
  .box
    = form_with(model: @post, local: true) do |form|
      .container
        .name-list
          = form.text_field :name, class: "name-list1", placeholder: "例: ホクホク肉じゃが"
        .image-list
          = form.file_field :image, class: "name-list1", placeholder: "写真"
        .text-list
          = form.text_area :text, placeholder: "材料" , rows: "10"
        .text2-list
          = form.text_area :text2, placeholder: "作り方" , rows: "10"
        = form.submit "SEND", class: "name-list2"
